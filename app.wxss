@import "./utils/iconfont.wxss";


/*公用CSS zp */
.padding-lr{padding:0 20rpx;}
.flex{display: flex;}
.justify-between{justify-content: space-between}
.align-center{align-content: center;}
.text-sm {font-size: 24rpx;}
.text-sm {font-size: 28rpx;}
.text-lg{font-size: 32rpx;}
.text-xl {font-size: 36rpx;font-weight: bold;}
.text-cut {text-overflow: ellipsis;white-space: nowrap;overflow: hidden;}
.radius{border-radius: 6rpx;}
.text-gray{color: #aaa;}
.text-content{line-height: 64rpx;}
.margin-bottom{margin-bottom: 32rpx;}


/* 问诊医师 zp*/
.tag{margin-bottom:32rpx;}
.rec{overflow: hidden;}
.doctor{width: 100%;margin-bottom: 20rpx;}
.doctor>view:nth-child(1)>image{width:200rpx;height: 200rpx;border-radius: 6rpx;}
.doctor>view:nth-child(2){padding: 20rpx 0 20rpx 20rpx;}
.doctor>view:nth-child(2)>.desc{width: 90%;}


