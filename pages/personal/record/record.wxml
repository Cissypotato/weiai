<form wx:if="{{formShow}}" bindsubmit="formSubmit">
  <view class="form-title">请填写您的健康档案</view>
  <view class="section-wrapper">
    <view class="section">
      <text>姓名：</text>
      <input type="text" auto-focus name="name"></input>
    </view>
    <view class="section">
      <text>性别：</text>
      <input type="text" name="gender"></input>
    </view>
    <view class="section">
      <text>年龄：</text>
      <input type="number" name="age"></input>
    </view>
    <view class="section">
      <text>身高：</text>
      <input type="number" name="height"></input>
    </view>
    <view class="section">
      <text>体重：</text>
      <input type="number" name="weight"></input>
    </view>
    <view class="section">
      <text>地址：</text>
      <input type="text" name="address"></input>
    </view>
    <view class="section">
      <text>病史：</text>
      <input type="text" name="illnessHistory"></input>
    </view>
    <view class="btn-area">
      <button form-type="submit" class="submit" >提交</button>
      <button form-type="reset" class="reset" >重置</button>
    </view>
  </view>


</form>

