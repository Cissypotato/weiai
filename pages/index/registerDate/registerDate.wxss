/* 提示 */
.tips{line-height: 90rpx;position: relative;padding: 0 20rpx 0 40rpx;}
.tips::before{position: absolute;content:'';left:20rpx;top: 20rpx;bottom: 20rpx;border-left: 6px solid #70A5FF;}
.tips::after{position: absolute;content:'';left:0;right: 0;bottom: 0;border-bottom: 1px solid #e4e4e4;}

/* 内容 */
.week{padding: 20rpx;}
.week >.week_box{flex-wrap: wrap;border-top: 1px solid #A1A1A1;}
.week >.week_box>.week_item{width: 32.9%;text-align: center;padding:20rpx 0;border: 1px solid #A1A1A1;border-top: none;border-left:none;}
.week >.week_box>.week_item:nth-child(3n+1){border-left: 1px solid #A1A1A1;}

/* 按钮 zp*/
.next{padding: 0 20rpx;opacity:1;border-radius:6px;margin-top: 20rpx;}
.next>button{background:#70A5FF;color: #fff;}

.make_info{position: fixed;bottom: 0;top: 40%;left: 0;right: 0;background: #fff;z-index: 2;border-radius: 20rpx;padding:0 20rpx;}
.make_info>.make_info_top{line-height: 90rpx;}
.make_info>.make_info_top>.title{line-height: 90rpx;font-size: 36rpx;}
.make_info>.make_info_top>.close{color: #8BB6FF;font-size: 30rpx;}
.make_info .make_form{line-height: 90rpx;border-bottom: 1px solid #F6F6F6;}
.make_info .make_form>view{width: 20%;}
.make_info .make_form>input{width: 80%;}
.make_info button{position: absolute;bottom: 40rpx;left: 20rpx;right: 20rpx;background: #F2F5F5;color: #6CA2FE;border:none;}
.make_info button::after{border: none;}

