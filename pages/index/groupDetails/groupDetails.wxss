page{background: #f5f5f5;padding-bottom: 40rpx;}
.group_state{background: #fff;line-height: 96rpx;background: #2496eb;color:#fff;text-align: center;}
.group_info{margin-top: 20rpx;padding: 10rpx 20rpx;background: #fff;border-radius: 6rpx;}
.group_info>view:nth-child(1){width: 20%;}
.group_info>view:nth-child(1)>image{width: 100%;}
.group_info>view:nth-child(2){width: 80%;padding:20rpx 0 20rpx 20rpx;}

.info{background: #fff;margin-top: 20rpx;padding: 20rpx;}
.info_title{line-height: 64rpx;}
.info_bus{padding: 20rpx 0;}
.lab{height:64rpx;line-height:64rpx;width:140rpx;text-align:justify;display:inline-block;overflow:hidden;vertical-align:middle;}
.lab text{display:inline-block;width:100%;height:0;}
.info>view:nth-child(1){width: 8%;}
.info>view:nth-child(2){width: 92%;}

.icon-ding_huabanfuben{font-size: 44rpx;color: #000;}
.icon-shangjia{font-size: 36rpx;color: #000;}
.icon-tips{font-size: 44rpx;color: #000;}