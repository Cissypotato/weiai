/* pages/index/drug/drug.wxss */
page{background: #f5f5f5;padding-bottom: 120rpx;}

/* 顶部图片信息 zp */
.drug{background: #fff;}
.drug_img{width: 100%;height:440rpx;background: #fff;}
.drug_img>image{width: 100%;height: 100%;}
.drug_info{padding: 20rpx;background: #fff;box-shadow: 0px -2px 6px rgba(0,0,0,0.06);margin-top: 20rpx;}

/* 详情 zp */
.drug_xq{margin-top: 20rpx;background: #fff;}
.drug_xq>view:nth-child(1){padding:12rpx 20rpx;line-height: 80rpx;justify-content: space-around;}
.drug_xq>view:nth-child(1)>view{position: relative;}
.xq_cur{position: absolute;bottom: 0;left: 0;right: 0;border-bottom: 1px solid #47b;}

.show_xq{padding: 20rpx;background: #fff;}
.show_xq .tit{width: 20%;display: inline-block;text-align: justify;height: 60rpx;line-height: 60rpx;}
.show_xq .tit:after {content: " ";display: inline-block;padding-left:100%;height: 0;}

/* 底部 zp */
.foot{position: fixed;bottom: 0;left:0;right: 0;background: #fff;padding: 20rpx;box-shadow: 0px -2px 6px rgba(0,0,0,0.06)}

/* 弹出层 zp */
.drug_number{position: fixed;bottom: 0;left: 0;right: 0;background: #fff;top: 80%;z-index: 3;padding: 20rpx;}
.drug_number>button{position: absolute;bottom: 20rpx;left: 20rpx;right: 20rpx;}
.drug_number .write>.num{display: block;text-align: center;border-bottom: 1px solid #eee;width: 120rpx;margin: 0 20rpx;}
.drug_number .write>.icon-jia{font-size:60rpx;}
.drug_number .write>.icon-jian{font-size:60rpx;}
