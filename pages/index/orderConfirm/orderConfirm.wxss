/* pages/index/orderConfirm/orderConfirm.wxss */
page{background: #f5f5f5;border-top: 1px solid #e4e4e4;}

.br-bt {
    background-image: url('data:image/png;base64,');
    background-size:auto 100%;
    height: 10rpx;
    width: 100%;
}

.order_site{background: #fff;padding: 20rpx 20rpx 0 20rpx;}
.order_site .no_site{line-height: 120rpx;}
.order_site .yes_site{padding: 0 0 20rpx 0;}

.order_drug{background: #fff;margin-top: 20rpx;}
.order_drug>.flex{padding: 20rpx;}
.order_drug>.flex>.flex{width: 90%;}
.order_drug>.flex>.flex>.img{width: 24%;}
.order_drug>.flex>.flex>.img>image{width: 100%;height: 100%;}
.order_drug>.flex>.flex>.info{width: 70%;padding:0 3%;position: relative;}
.order_drug>.flex>.flex>.info>.price{position: absolute;bottom: 0;}

.order_item{background: #fff;margin-top: 20rpx;line-height: 90rpx;}


.foot{position: fixed;background: #fff;line-height: 120rpx;bottom: 0;left: 0;right: 0;padding-left: 20rpx;}
.foot>.bg-blue{width: 30%;text-align: center;}